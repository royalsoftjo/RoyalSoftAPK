<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:id="@+id/aa"
    android:layout_marginRight="5dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/bt_N_closeCashVan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:elevation="5dp"
        android:layout_alignParentRight="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/DialogReda"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:textColor="@color/DialogWhite"
                        android:text="@string/Choose_from_the_list"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:id="@+id/Print_Previous_Invoice"
                        android:background="@drawable/button_access"
                        android:orientation="horizontal">




                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/check"
                            android:textColor="@color/DialogWhite"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/Print_Previous_Invoice"
                            android:textAlignment="center"
                            android:textColor="@color/DialogWhite"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:id="@+id/btn_Pohto"
                        android:background="@drawable/button_access"
                        android:orientation="horizontal">




                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ca"
                            android:textColor="@color/DialogWhite"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/take_picture"
                            android:textAlignment="center"
                            android:textColor="@color/DialogWhite"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="10dp"
                        android:id="@+id/btn_IncomingCashVouchers"
                        android:gravity="center"
                        android:background="@drawable/button_access"
                        android:orientation="horizontal">




                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="left"
                            android:src="@drawable/incoming"
                            android:textColor="@color/DialogWhite"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/IncomingCashVouchers"
                            android:textAlignment="center"
                            android:textColor="@color/DialogWhite"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:id="@+id/idIncommingChequesCashVan"
                        android:background="@drawable/button_access"
                        android:orientation="horizontal">




                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="left"
                            android:src="@drawable/check"
                            android:textColor="@color/DialogWhite"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/Incoming_Cheques_Vouchers"
                            android:textAlignment="center"
                            android:textColor="@color/DialogWhite"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:id="@+id/btnPrintSettings"
                        android:background="@drawable/button_access"
                        android:orientation="horizontal">




                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="left"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_print_black_24dp"
                            android:textColor="@color/DialogWhite"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/txtSettingPrinter"
                            android:textAlignment="center"
                            android:textColor="@color/DialogWhite"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:id="@+id/btnExit"
                        android:background="@drawable/button_access"
                        android:orientation="horizontal">




                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="left"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_exit2_to_app_black_24dp"
                            android:textColor="@color/DialogWhite"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/sign_out"
                            android:textAlignment="center"
                            android:textColor="@color/DialogWhite"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>



        </androidx.cardview.widget.CardView>
    </ScrollView>


</RelativeLayout>