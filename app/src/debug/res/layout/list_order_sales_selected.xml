<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/Line"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="9"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:textSize="15dp"
                android:gravity="center"
                android:id="@+id/Number"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="#"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:textSize="15dp"
                android:gravity="center"
                android:id="@+id/ItemNameSelected"
                android:textStyle="bold"
                android:layout_weight="3"
                android:text="@string/lsitImageSales"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:textSize="15dp"
                android:id="@+id/PriceSelected"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="@string/lsitPriceSales"
                ></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:textSize="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/QtySelected"
                android:layout_weight="1"
                android:text="@string/Quantity"></TextView>



            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#D50000"
                android:textSize="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/TotalSelected"
                android:layout_weight="2"
                android:text="@string/total"></TextView>


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:src="@drawable/ic_delete_forever_black_24dp"
                android:layout_marginTop="15dp"
                android:id="@+id/DeleteRowSelectedOrderSales"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                ></ImageView>




        </LinearLayout>

    </LinearLayout>

</LinearLayout>