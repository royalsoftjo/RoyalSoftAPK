<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="20"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/ID_Offer"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/DialogRedDark"
                android:layout_weight="2"
                android:text="رقم العرض"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:id="@+id/Name_Offer"
                android:gravity="center"
                android:text="اسم العرض"
                android:textSize="13dp"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:id="@+id/DateFrom_Offer"
                android:gravity="center"
                android:text="من تاريخ"
                android:textSize="13dp"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/DateTo_Offer"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_weight="4"
                android:text="إلى تاريخ"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/Status_Offer"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_weight="3"
                android:text="الحالة"></TextView>




        </LinearLayout>

    </LinearLayout>

</LinearLayout>