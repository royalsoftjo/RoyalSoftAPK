<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/noteText1"
        android:textSize="22sp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/idCamera"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/DialogRed"
            android:text="@string/cancel"
            android:id="@+id/idCancel"
            android:textColor="@color/DialogWhite"
            android:textSize="18sp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/DialogGreen2"
            android:text="@string/txtOk"
            android:id="@+id/idOk"
            android:textColor="@color/DialogWhite"
            android:textSize="18sp"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>