<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#0099ff"
    android:layout_height="match_parent"
    tools:context=".frmDailySalesDetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="9"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:textSize="16dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="الفرع"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:text="يوم العمل"
                android:textColor="#fff"
                android:textSize="16dp"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:textSize="13dp"
                android:gravity="center"
                android:textStyle="bold"

                android:layout_weight="1"
                android:text="إجمالي المبيعات"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:textSize="16dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text=" 16%"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="16dp"
                android:gravity="center"
                android:text=" 10%"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="16dp"
                android:gravity="center"
                android:text=" 8%"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="16dp"
                android:gravity="center"
                android:text=" 5%"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="16dp"
                android:gravity="center"
                android:text=" 4%"></TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="16dp"
                android:gravity="center"
                android:text=" 0%"></TextView>

        </LinearLayout>
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="match_parent"
            android:id="@+id/lv"/>
    </LinearLayout>

</RelativeLayout>