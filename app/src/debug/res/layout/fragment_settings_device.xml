<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsDevice">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/MuSettings"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/DialogRed"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="@string/txtDailyupdate"
                android:textColor="#000000"
                android:id="@+id/chDailyupdate"
                />

            <CheckBox
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:text="@string/txtBranchdataupdate"
                android:textColor="#000000"
                android:id="@+id/chBranchdataupdate"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

            <CheckBox
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/txtUpdatingwarehousedata"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:id="@+id/chUpdatingwarehousedata"
                />

            <CheckBox
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/txtUpdate_material_data"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:id="@+id/chUpdate_material_data"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

            <CheckBox
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/txtUpdate_supplier_data"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:id="@+id/chUpdate_supplier_data"
                />

            <CheckBox
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/txtUpdate_customer_data"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:id="@+id/chUpdate_customer_data"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

            <CheckBox
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/txtUpdate_employee_data"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:id="@+id/chUpdate_employee_data"
                />

            <CheckBox
                android:layout_weight="50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/txtGroup_data_update"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:id="@+id/chGroup_data_update"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

            <CheckBox
                android:layout_weight="100"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/txt_Data_migrated_after_each_save"
                android:layout_margin="10dp"
                android:textColor="#000DE6"
                android:id="@+id/chData_migrated_after_each_save"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

            <Button
                android:layout_weight="100"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/txtSaveSetting"
                android:layout_margin="20dp"
                android:textColor="#FFF1F1"
                android:textStyle="bold"
                android:background="@drawable/hover_bt_cashopen"
                android:id="@+id/btnSaveSettingsDevice"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

            <Button
                android:layout_weight="100"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/cancel"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textColor="#FFF1F1"
                android:textStyle="bold"
                android:background="@drawable/hover_bt_cashopen2"
                android:id="@+id/btnCancelSettingsDevice"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_weight="100"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/noError"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textColor="#FFF1F1"
                android:textStyle="bold"
                android:background="@drawable/hover_bt_cashopen3"
                android:id="@+id/noerror"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_weight="100"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/txtSettingPrinter"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textColor="#FFF1F1"
                android:textStyle="bold"
                android:background="@drawable/btn_des1"
                android:id="@+id/btnSettingPrinter"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_weight="100"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/txtSettingPrinter"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textColor="#FFF1F1"
                android:textStyle="bold"
                android:background="@drawable/btn_des1"
                android:id="@+id/btnSettingPrinteraaa"
                />




        </LinearLayout>
    </LinearLayout>

</ScrollView>