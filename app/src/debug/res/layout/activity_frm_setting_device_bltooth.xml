<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    tools:context=".frmSettingDeviceBltooth">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/MuSettings"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg8"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#fff"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_weight="20"
                        android:text="@string/txtNo"></TextView>



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#fff"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_weight="20"
                        android:text="@string/device_name"></TextView>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#fff"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_weight="20"
                        android:text="@string/Device_type"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#fff"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_weight="20"
                        android:text="Mac Address"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#fff"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_weight="20"
                        android:text=""></TextView>




                </LinearLayout>
            </LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_height="match_parent"
                android:id="@+id/list_setting1"/>
        </LinearLayout>

        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_margin="20dp"
    android:weightSum="100">
    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/hover_edittext_sms"
        android:layout_weight="50"
        android:id="@+id/btnBefore_Device"
        android:text="@string/Predefined_devices"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/btn_border_grean"
        android:layout_weight="50"
        android:id="@+id/btnNewDevice"
        android:text="@string/New_connected_devices"/>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_black"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/txtNo"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/idNo"
                    android:layout_margin="10dp"
                    android:textAlignment="center"/>
            </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/device_name"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idAname"
            android:layout_margin="10dp"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/Device_type"
                    />
                <Spinner
                    android:layout_width="match_parent"
                    android:id="@+id/comboTypeDevices"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textAlignment="center"/>
            </LinearLayout>
    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="13dp"
                    android:text="MacAddress"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/idMac"
                    android:textAlignment="center"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="20dp"
            android:weightSum="100">
            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/btn_Save"
                android:layout_margin="5dp"
                android:textColor="@color/DialogWhite"
                android:background="@drawable/hover_bt_sms"
                android:layout_weight="50"
                android:text="@string/txtSave"/>

            <Button
                android:layout_width="0dp"
                android:id="@+id/bt_cancel"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:textColor="@color/DialogWhite"
                android:background="@drawable/btn_white1"
                android:layout_weight="50"
                android:text="@string/cancel"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>